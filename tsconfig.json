{
    "compilerOptions": {
      "target": "es5",
      "outDir": "lib",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "declaration": true,
      "declarationDir": "lib",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "plugins": [{ "name": "typescript-plugin-css-modules" }],
      "resolveJsonModule": true,
      "isolatedModules": true,
      "emitDeclarationOnly": false,
      "sourceMap": true,
      "jsx": "react"
    },
    "include": [
      "src",
      "declaration.d.ts",
      "css-module.d.ts"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}